<div class="row">
  <div class="col-md-12">
    <%= form_for(@settings_machinegroup, url: settings_machinegroups_path, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

        <% if @settings_machinegroup.errors.any? %>
            <div class="panel panel-danger col-md-offset-1">
              <div class="panel-heading">
                <h2 class="panel-title">
                  <%= pluralize(@settings_machinegroup.errors.count, 'error') %>
                  prohibited this machine group from being saved:
                </h2>
                <div class="panel-body">
                  <ul>
                    <% @settings_machinegroup.errors.full_messages.each do |msg| %>
                        <li>
                          <%= msg %>
                        </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
        <% end %>
        <div class="form-group">
          <div class="control-label col-md-1">
            <%= f.label :name %>
          </div>
          <div class="col-md-11">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Machine Group name', autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-1 col-md-11">
            <%= f.submit "Create Machine Group", class: 'btn btn-primary btn-lg pull-right' %>
          </div>
        </div>
    <% end %>
  </div>
</div>