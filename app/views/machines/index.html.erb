<div class="table-responsive">
  <h3>Catalogue</h3>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Type</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Unit price</th>
      <th>Stock</th>
			<th colspan="1"></th>
    </tr>
    </thead>
    <tbody>
    <% @machines.each do |machine| %>
        <tr>
          <td><%= machine.machinetype.name %></td>
          <td><%= machine.brand.name %></td>
          <td><%= link_to machine.model, [machine] %></td>
          <td><%= number_to_currency(machine.unitprice, unit: 'â‚¬', format: '%n %u', precision: 2, separator: ".", delimiter: ',') %></td>
          <td><%= machine.currentstock %></td>
					<td><%= link_to edit_machine_path(machine), class: "btn btn-default btn-xs" do %>
							    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
					    <%= link_to [machine], method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-default btn-xs" do %>
							    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <% end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div class="actions">
    <% if user_signed_in? %>
      <%= link_to 'Add Machine', new_machine_path, class: 'btn btn-default btn-lg', id: 'new-brand-btn' %>
    <% end %>
  </div>
</div>
